# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.LoginController.index()
GET     /home                       controllers.HomeController.home()
POST    /login                      controllers.LoginController.login(req: Request)
GET     /logout                     controllers.LogoutController.logoutPage()
POST    /logout                     controllers.LogoutController.logout()
GET     /signUp                     controllers.SignUpController.signUp()
POST    /signUp                     controllers.SignUpController.submitSignUp(req: Request)

GET     /posts                      controllers.PostController.getPosts(req: Request)
GET     /makePost                   controllers.PostController.makePost()
POST    /makePost                   controllers.PostController.submitMakePost(req: Request)

GET     /persons                    controllers.PostController.getPersons()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
